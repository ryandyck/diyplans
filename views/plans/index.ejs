<% include ../partials/header %>



<!-- adds some spacing on the sides -->
<div class="container">

    <!-- same as div really, just has a name for us to recognize -->
    <header class="jumbotron">
        <!-- more spacing -->
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked plans from all over the world</p>
            <!-- p is for spacing to ensure button is on its own line -->
            <p>
                <a class="btn btn-primary btn-lg" href="/plans/new">Add New Plan</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% plans.forEach(function(i){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <!-- want to display the plans image string into the src sothat it will display the image -->
                    <img src="<%= i.image %>">
                    <div class="caption">
                        <h4><%= i.name %></h4>
                    </div>
                    <p>
                        <a href="/plans/<%= i._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>